<resources>
    <string name="app_name">StackView</string>

    <declare-styleable name="StackView">
        <attr name="swipe" format="dimension" />
        <attr name="padding" format="dimension" />
        <attr name="margin" format="dimension" />
        <attr name="radius" format="dimension" />

        <attr name="action_enable" format="boolean" />
        <attr name="action_color" format="color" />
        <attr name="action_text" format="string" />
        <attr name="action_textAppearance" format="reference" />
        <attr name="action_animation_duration" format="integer" />

        <attr name="animation_duration" format="integer" />
        <attr name="preview_layout" format="reference" />
    </declare-styleable>
</resources>
